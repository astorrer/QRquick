#top-nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.icon-toggle
      = link_to 'QRquick', root_path, class: 'navbar-brand'
    .navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - unless user_signed_in?
          %li= link_to 'Sign in', new_user_session_path
          %li= link_to 'Sign up', new_user_registration_path
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
              %i.glyphicon.glyphicon-user
              = current_user.email
              %span.caret
            %ul#g-account-menu.dropdown-menu{:role => "menu"}
              %li
                = link_to edit_user_registration_path do
                  %i.glyphicon.glyphicon-wrench
                  Settings
              %li
                = link_to destroy_user_session_path, :method=>'delete' do
                  %i.glyphicon.glyphicon-lock
                  Logout
.container-fluid
  .row
    .col-lg-12
      %h1 QR Codes

      .btn-group{"aria-label" => "...", :role => "group"}
        = link_to 'ADD CODE', new_quick_code_path, class: 'btn btn-primary'
        .btn-group{:role => "group"}
          %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
            EXPORT
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to 'XLS', new_quick_code_path
            %li
              = link_to 'CSV', new_quick_code_path

      %table.table.table-hover
        %thead
          %tr
            %th Name
            %th Content
            %th Download
            %th 
        %tbody
          - @quick_codes.each do |quick_code|
            %tr
              %td= quick_code.name
              %td= quick_code.content
              %td
                .btn-group
                  = link_to "SVG", quick_code_path(quick_code, format: "svg"), class: 'btn btn-default'
                  = link_to "PNG", quick_code_path(quick_code, format: "png"), class: 'btn btn-default'
                  = link_to "GIF", quick_code_path(quick_code, format: "gif"), class: 'btn btn-default'
                  = link_to "JPG", quick_code_path(quick_code, format: "jpg"), class: 'btn btn-default'
              %td
                .btn-group
                  = link_to 'SHOW', quick_code, class: 'btn btn-default'
                  = link_to 'EDIT', edit_quick_code_path(quick_code), class: 'btn btn-default'
                  = link_to 'DELETE', quick_code, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'
